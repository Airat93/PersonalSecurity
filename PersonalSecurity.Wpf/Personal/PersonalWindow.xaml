<Window x:Name="Window" x:Class="PersonalSecurity.Wpf.Personal.PersonalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PersonalWindow" Height="442" Width="399" Background="#FF978F8F">
    <Grid x:Name="Grid">
        <StackPanel x:Name="PersonalPanel" HorizontalAlignment="Left" Height="334" Margin="29,19,0,0" VerticalAlignment="Top" Width="317">
            <Label x:Name="Name" Content="Имя"/>
            <TextBox x:Name="NameText" Height="23" TextWrapping="Wrap"/>
            <DockPanel x:Name="Offset" Height="37" LastChildFill="False"/>
            <Label x:Name="LastName" Content="Фамилия"/>
            <TextBox x:Name="LastNameText" Height="23" TextWrapping="Wrap"/>
            <DockPanel x:Name="Offset1" Height="37" LastChildFill="False"/>
            <Label x:Name="DateOfBirth" Content="Дата рождения"/>
            <DatePicker x:Name="DateOfBirthPicker"/>
            <DockPanel x:Name="Offset2" Height="52" LastChildFill="False"/>
            <Button x:Name="SavePersonal" Content="Сохранить" Click="SavePersonal_Click"/>
        </StackPanel>
        <Button x:Name="Exit" Content="Выйти" HorizontalAlignment="Left" Margin="261,368,0,0" VerticalAlignment="Top" Width="120" Height="34" Click="Exit_Click"/>

    </Grid>
</Window>
